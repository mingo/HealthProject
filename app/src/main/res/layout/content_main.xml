<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mingz.healthproject.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <TextView
        android:id="@+id/editText"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:text="Click the buttons to check-in! :)"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Excellent! XO"
            android:layout_marginBottom="280sp"
            android:background="#EC7063"
            android:textColor="#FDFEFE"
            android:textStyle="bold" />
        <Button
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_marginTop="70sp"
            android:text="Feel good! :)"
            android:background="#3498DB"
            android:textColor="#FDFEFE"
            android:textStyle="bold" />

        <Button
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_marginTop="140sp"
            android:text="I am okay..."
            android:background="#F39C12"
            android:textColor="#FDFEFE"
            android:textStyle="bold" />

        <Button
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_marginTop="210sp"
            android:text="not really good:|"
            android:background="#17A589"
            android:textColor="#FDFEFE"
            android:textStyle="bold" />

        <Button
            android:id="@+id/radioButton5"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_marginTop="280sp"
            android:text="Feel bad:("
            android:textAlignment="center"
            android:background="#34495E"
            android:textColor="#FDFEFE"
            android:textStyle="bold" />
    </FrameLayout>


</RelativeLayout>
